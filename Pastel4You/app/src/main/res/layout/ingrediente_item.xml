<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AtividadesAdapter">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:touchscreenBlocksFocus="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:layout_alignBottom="@+id/frameLayout">


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/frameLayout">

        <!-- Barra de progresso enquanto carrega mais info -->
    <ProgressBar
        android:id="@+id/progressImg"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginRight="6dp"
        android:gravity="center|center_vertical"
        android:visibility="invisible" />


        <CheckBox
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/checkBox_selecao"
            android:singleLine="false"

            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:id="@+id/textoLView"
            android:layout_width="342dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/checkBox_selecao"
            android:layout_toStartOf="@+id/checkBox_selecao"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignBottom="@+id/checkBox_selecao"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

</RelativeLayout>